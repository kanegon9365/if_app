<%= render 'layouts/header' %>
<h1>ユーザー編集</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>

      <%= f.label :名前 %>
      <%= f.text_field :name %>

      <%= f.label :メールアドレス %>
      <%= f.email_field :email %>

      <%= f.label :パスワード　%>
      <%= f.password_field :password %>

      <%= f.label :パスワードの確認 %>
      <%= f.password_field :password_field %>

      <%= f.submit "編集を保存", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>